<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title>
        {% block titre_page %}
            ApproLive
        {% endblock %}
    </title>

    {% block stylesheets %}
        <link href="{{ asset('template/stylesheets/open_sans.css') }}" media="screen" rel="stylesheet" type="text/css" />

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">

        <link href="{{ asset('template/bootstrap3/css/bootstrap.min.css') }}" media="screen" rel="stylesheet" type="text/css" />

        <link href="{{ asset('template/stylesheets/application.css') }}" media="screen" rel="stylesheet" type="text/css" />

        <link href="{{ asset('template/DataTables/datatables.css') }}" media="screen" rel="stylesheet" type="text/css" />
    {% endblock %}

</head>

<body>
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <a class="navbar-brand" href="#">ApproLive</a>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-primary">
            <span class="sr-only">Toggle Side Navigation</span>
            <i class="icon-th-list"></i>
        </button>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-top">
            <span class="sr-only">Toggle Top Navigation</span>
            <i class="icon-align-justify"></i>
        </button>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-collapse-top">
        <div class="navbar-right">
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle dropdown-avatar" data-toggle="dropdown">
                      <span>
                        <img class="menu-avatar" src="{{ asset('template/images/avatars/avatar1.jpg') }}" alt="image"/>
                        <span>John Smith <i class="icon-caret-down"></i></span>
                      </span>
                    </a>
                    <ul class="dropdown-menu">

                        <!-- the first element is the one with the big avatar, add a with-image class to it -->

                        <li class="with-image">
                            <div class="avatar">
                                <img src="{{ asset('template/images/avatars/avatar1.jpg') }}" alt="image"/>
                            </div>
                            <span>John Smith</span>
                        </li>

                        <li class="divider"></li>

                        <li><a href="#"><i class="icon-user"></i> <span>Profil</span></a></li>
                        <li><a href="#"><i class="icon-cog"></i> <span>Paramètres</span></a></li>
                        <li><a href="#"><i class="icon-off"></i> <span>Déconnexion</span></a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div><!-- /.navbar-collapse -->

</nav>

<div class="sidebar-background">
    <div class="primary-sidebar-background"></div>
</div>

<div class="primary-sidebar" style="position:fixed;z-index:2;">

    <!-- Main nav -->
    <ul class="nav navbar-collapse collapse navbar-collapse-primary">

        <li class="active">
            <span class="glow"></span>
            <a href="{{ path('accueil') }}" title="Accueil">
                <i class="icon-home icon-2x"></i>
                <span>Accueil</span>
            </a>
        </li>

        <li>
            <span class="glow"></span>
            <a href="{{ path('liste_type_structure') }}" title="Type Structure">
                <i class="icon-list icon-2x"></i>
                <span>Type Structure</span>
            </a>
        </li>

        <li>
            <span class="glow"></span>
            <a href="#" title="Structure">
                <i class="icon-hospital icon-2x"></i>
                <span>Structure</span>
            </a>
        </li>

        <li>
            <span class="glow"></span>
            <a href="#" title="Fournisseur">
                <i class="icon-shopping-cart icon-2x"></i>
                <span>Fournisseur</span>
            </a>
        </li>

        <li>
            <span class="glow"></span>
            <a href="#" title="Produit">
                <i class="icon-medkit icon-2x"></i>
                <span>Produit</span>
            </a>
        </li>
    </ul>
</div>

<div class="main-content" style="margin-top:51px;">
    <div class="container">
        <div class="row">
            <div class="area-top clearfix">
                <div class="pull-left header">
                    <h3 class="title">
                        {% block titre_contenu %}
                            <i class="icon-home"></i> Accueil
                        {% endblock %}
                    </h3>
                </div>

                <div class="pull-right header">
                    {% block boutons %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

    {% block contenu_principal %}
        {# Affichage des messages flash #}
        {% for message in app.flashes('notification') %}
            {% if message is not null %}
                <div class="row notification">
                    <div class="alert alert-info alert-dismissible col-md-offset-3 col-md-6 text-center" style="font-size: 1.1em;">
                        {#<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>#}
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('template/javascripts/application.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
